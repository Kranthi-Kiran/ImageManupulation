<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cv.imagemanipulation.Landing"
    tools:showIn="@layout/activity_landing"
    android:background="#62bcfa">

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="File"
        android:id="@+id/btnFile"
        android:layout_alignTop="@+id/btnUndo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:id="@+id/btnUndo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnFile"
        android:layout_toEndOf="@+id/btnFile"
        android:elevation="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Process"
        android:id="@+id/btnProcess"
        android:layout_alignBottom="@+id/btnUndo"
        android:layout_toRightOf="@+id/btnUndo"
        android:layout_toEndOf="@+id/btnUndo"
        android:elevation="@dimen/abc_action_bar_content_inset_material" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/btnProcess"
        android:layout_toRightOf="@+id/btnProcess"
        android:layout_toEndOf="@+id/btnProcess"
        android:elevation="@dimen/abc_action_bar_content_inset_material" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/btnFile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />
</RelativeLayout>
